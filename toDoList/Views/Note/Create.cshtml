@model List<toDoList.Models.Category>

@using (Html.BeginForm("Create", "Note", FormMethod.Post))
{
    <select name="typeStorage">
        <option asp-controller="Note" asp-action="Create" value="sql">Sql</option>
        <option asp-controller="Note" asp-action="CreateXml" value="xml">Xml</option>
    </select>
    @Html.TextBox("Name", "Купити молоко")
    <select name="category">
        @foreach (var item in Model)
        {
            <option value="@item.Name">@item.Name</option>
        }
    </select>
    @Html.TextBox("FinalDate", "", new {type="date"})
    <button>Додати</button>
}
